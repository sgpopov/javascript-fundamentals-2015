---
env:
  browser: true
  node: true
  jasmine: true
  mocha: true

rules:
  block-scoped-var: 0
  brace-style:
    - 2
    - "stroustrup"
  consistent-return: 0
  consistent-this:
    - 2
    - "self"
  indent:
    - 2
    - 2
  no-unused-expressions: 1
  no-unused-vars:
    - 2
    - 
      vars: "all"
      args: "after-used"
  no-use-before-define:
    - 2
    - "nofunc"
  no-warning-comments: 2
  no-plusplus: 1
  quotes:
    - 2
    - "single"
  radix: 2
  semi:
    - 2
    - "always"
  sort-vars: 0
  space-after-keywords:
    - 1 
    - "always"
    - 
      checkFunctionKeyword: true
  space-in-brackets: 
    - 2
    - "never"
    - 
      singleValue: false
      objectsInArrays: false
      arraysInArrays: true
      arraysInObjects: false
      objectsInObjects: false
      propertyName: false
  strict: 2
  use-isnan: 2
  valid-jsdoc:
  - 1
  - 
    requireReturn: false
  valid-typeof: 2
  wrap-iife: 0
  wrap-regex: 0
